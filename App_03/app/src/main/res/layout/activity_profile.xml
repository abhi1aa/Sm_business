<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishek.authentication.profile">
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@color/offwhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/cv1"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/cback"
        android:layout_gravity="bottom"
        android:id="@+id/view"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:background="@null"
        android:textColor="@color/white"
        android:id="@+id/crt"
        android:layout_marginTop="150dp"
        android:onClick="create"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:textSize="30dp"
        android:textColor="@color/cback"
        android:background="@null"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:id="@+id/join"
        android:layout_marginTop="50dp"
        android:onClick="join"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join"
        android:id="@+id/edj"
        android:background="@null"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:hint="Enter business name"/>

        <View
            android:id="@+id/v1"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="125dp"
            android:background="@color/dashback" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Your username"
        android:layout_gravity="end"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/uname"/>
        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:id="@+id/v2"
            android:layout_marginEnd="20dp"
            android:background="@color/dashback"
            android:layout_marginTop="165dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entj"
        android:layout_below="@+id/uname"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myb"
        android:textColor="@color/white"
        android:text="enter"
        android:layout_gravity="end"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:onClick="enter_join"/>

    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:layout_marginTop="16dp"
        android:background="@drawable/myb"
        android:textColor="@color/white"
        android:onClick="logout"
        android:layout_below="@+id/cv1"
        android:layout_alignEnd="@+id/cv1" />

</RelativeLayout>
